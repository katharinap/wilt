<h2><%= @post.title %></h2>

<div class="tags">
  <ul>
    <%= for tag <- @post.tags do %>
	<li><%= tag.name %></li>
    <% end %>
  </ul>
<div class="post">
  <%= markdown(@post.body) %>
</div>

<span><%= link "Edit", to: post_path(@conn, :edit, @post) %></span>
<span><%= link "Back", to: post_path(@conn, :index) %></span>
